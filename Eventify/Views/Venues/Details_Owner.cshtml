@{
    ViewBag.Title = "Venue Details";
}
@model VenueDetailsOwnerVM

<div class="container-lg py-5">
    <div class="row g-5">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Image Gallery -->
            <div class="mb-5">
                @if (Model.venuePhotos != null && Model.venuePhotos.Any())
                {
                    <!-- Main Carousel -->
                    <div id="mainCarousel" class="carousel slide mb-3 rounded-3" data-bs-ride="carousel" style="background-color: var(--card-bg);">
                        <div class="carousel-inner rounded-3">
                            @for (int i = 0; i < Model.venuePhotos.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")" style="height: 400px;">
                                    <img src="@Model.venuePhotos[i].PhotoUrl"
                                         class="d-block w-100 h-100"
                                         style="object-fit: contain;"
                                         alt="@Model.Name">
                                </div>
                            }
                        </div>

                        <!-- Prev / Next Buttons -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                            <i class="fa fa-angle-left fs-1 text-primary"></i>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                            <i class="fa fa-angle-right fs-1 text-primary"></i>
                        </button>
                    </div>

                    <!-- Thumbnails (Carousel only if more than 10 images) -->
                    @if (Model.venuePhotos.Count > 10)
                    {
                        <!-- Thumbnails Carousel -->
                        <div id="thumbCarousel" class="carousel slide" data-bs-interval="false">
                            <div class="carousel-inner">

                                @{
                                    int groupSize = 10;
                                    int totalGroups = (int)Math.Ceiling(Model.venuePhotos.Count / (double)groupSize);
                                }

                                @for (int g = 0; g < totalGroups; g++)
                                {
                                    <div class="carousel-item @(g == 0 ? "active" : "")">
                                        <div class="d-flex gap-2 justify-content-start">

                                            @foreach (var photo in Model.venuePhotos.Skip(g * groupSize).Take(groupSize))
                                            {
                                                <img src="@photo.PhotoUrl"
                                                     class="rounded thumb-img"
                                                     style="width: 80px; height: 80px; object-fit: cover; cursor: pointer; border: 2px solid transparent;">
                                            }
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Thumbnails Controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                                <i class="fa fa-angle-left fs-1 text-primary"></i>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                                <i class="fa fa-angle-right fs-1 text-primary"></i>
                            </button>
                        </div>
                    }
                    else
                    {
                        <!-- Thumbnails normally if <= 10 -->
                        <div class="d-flex gap-2 overflow-auto">
                            @foreach (var photo in Model.venuePhotos)
                            {
                                <img src="@photo.PhotoUrl"
                                     class="rounded thumb-img"
                                     style="width: 80px; height: 80px; object-fit: cover; cursor: pointer; border: 2px solid transparent;">
                            }
                        </div>
                    }
                }
                @* else *@
                @* { *@
                @*     <div class="position-relative rounded-3 overflow-hidden mb-3" style="height: 400px;"> *@
                @*         <img src="~/images/event2.jpg" *@
                @*         class="w-100 h-100" *@
                @*         style="object-fit: cover;" *@
                @*         alt="@Model.Name"> *@
                @*     </div> *@
                @* } *@
            </div>

            <!-- JS: Click Thumbnail -> Change Main Carousel Slide -->
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    const thumbs = document.querySelectorAll(".thumb-img");
                    const mainCarousel = bootstrap.Carousel.getOrCreateInstance("#mainCarousel");

                    thumbs.forEach((thumb, i) => {
                        thumb.addEventListener("click", () => {
                            mainCarousel.to(i);

                            // Remove highlight from all thumbs
                            thumbs.forEach(t => t.style.border = "2px solid transparent");

                            // Highlight selected thumbnail
                            thumb.style.border = "2px solid #0d6efd";
                        });
                    });
                });
            </script>


            <!-- Venue Name -->
            <div>
                <h1 class="display-5 fw-bold mb-4">@Model.Name</h1>
            </div>

            <!-- Overview Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <p class="text-muted">@Model.Description</p>
                </div>
            </div>

            <!-- Event Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light border-0">
                    <h5 class="card-title fw-bold mb-0">Venue Information</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-building text-primary me-3 fs-5"></i>
                        <div>
                            <small class="text-muted">Venue Type:</small>
                            <div>@Model.VenueType</div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-map-marker-alt text-primary me-3 fs-5"></i>
                        <div>
                            <small class="text-muted">Location</small>
                            <div>@Model.Country / @Model.Address</div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-users text-primary me-3 fs-5"></i>
                        <div>
                            <small class="text-muted">Capacity</small>
                            <div>@Model.Capacity people</div>
                        </div>
                    </div>
                </div>
            </div>



            <!-- Amenities Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light border-0">
                    <h5 class="card-title fw-bold mb-0">Amenities & Services</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            @if (Model.WifiAvailable)
                            {
                                <div class="d-flex align-items-center gap-2 mb-3">
                                    <i class="fas fa-wifi text-primary"></i>
                                    <span>WiFi</span>
                                </div>
                            }
                            @if (Model.ParkingAvailable)
                            {
                                <div class="d-flex align-items-center gap-2 mb-3">
                                    <i class="fas fa-car text-primary"></i>
                                    <span>Parking</span>
                                </div>
                            }
                            @if (Model.CateringAvailable)
                            {
                                <div class="d-flex align-items-center gap-2 mb-3">
                                    <i class="fas fa-utensils text-primary"></i>
                                    <span>Catering</span>
                                </div>
                            }
                            @if (Model.AudioVisualEquipment)
                            {
                                <div class="d-flex align-items-center gap-2 mb-3">
                                    <i class="fas fa-bullhorn text-primary"></i>
                                    <span>Audio & Visual Equipment</span>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            @if (Model.AirConditioningAvailable)
                            {
                                <div class="d-flex align-items-center gap-2 mb-3">
                                    <i class="fas fa-thermometer-empty text-primary"></i>
                                    <span>Air Conditioning</span>
                                </div>
                            }
                            @if (Model.BarServiceAvailable)
                            {
                                <div class="d-flex align-items-center gap-2 mb-3">
                                    <i class="fas fa-coffee text-primary"></i>
                                    <span>Bar Service</span>
                                </div>
                            }
                            @if (Model.RestroomsAvailable)
                            {
                                <div class="d-flex align-items-center gap-2 mb-3">
                                    <i class="fas fa-toilet text-primary"></i>
                                    <span>Restrooms Available</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- What's Included -->
            @if (!string.IsNullOrEmpty(Model.SpecialFeatures))
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light border-0">
                        <h5 class="card-title fw-bold mb-0">What's Included</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex gap-2 mb-2">
                            <i class="fas fa-circle-dot text-primary" style="font-size: 0.5rem; margin-top: 0.5rem;"></i>
                            <span>@Model.SpecialFeatures</span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Booking Card -->
            <div class="card border-0 shadow-sm sticky-top" style="top: 100px;">
                <div class="card-body">
                    <!-- Booking Card -->
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">Reservations</h5>
                        <div style="max-height: 250px; overflow-y: auto; border: 1px solid var(--color-background); border-radius: 0.375rem;">
                            <table class="table table-sm mb-0">
                                <thead class="bg-light sticky-top">
                                    <tr>
                                        <th class="border-bottom">From</th>
                                        <th class="border-bottom">To</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.DateRange != null && Model.DateRange.Any())
                                    {
                                        foreach (var date in Model.DateRange.OrderBy(d => d.StartDate))
                                        {
                                            <tr>
                                                <td>@date.StartDate.ToString("dd-MM-yyyy hh:mm tt")</td>
                                                <td>@date.EndDate.ToString("dd-MM-yyyy hh:mm tt")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="2" class="text-center text-muted py-3">No confirmed reservations.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="mb-4">
                        <h3 class="text-primary fw-bold">$2,500</h3>
                        <small class="text-muted">Per hour</small>
                    </div>
                    <div class="d-grid gap-2 mb-3">
                        <a class="btn btn-outline-primary" href="@Url.Action("Edit", "Venues", new { id = Model.Id })">Edit</a>
                        <a class="btn btn-outline-danger" href="@Url.Action("Delete", "Venues", new { id = Model.Id})">Delete</a>
                    </div>


                    <!-- Booking Card -->
                    <hr>
                    <div class="mb-4">
                        <h3 class="text-primary fw-bold mb-3">Booking Orders</h3>
                        <div style="max-height: 250px; overflow-y: auto; border: 1px solid var(--color-background); border-radius: 0.375rem;">
                            <div class="list-group list-group-flush">
                                @if (Model.PendingEvents != null && Model.PendingEvents.Any())
                                {
                                    foreach (var pendingEvent in Model.PendingEvents)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center border-bottom">
                                            <span>@pendingEvent.EventTitle</span>
                                            <a class="btn btn-sm btn-dark rounded" href="@Url.Action("Details", "Events", new { id = pendingEvent.EventId })">Show Event</a>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="text-center text-muted py-3">No pending booking orders.</div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Booking Card -->
                    <hr>
                    <div class="mb-3">
                        <h6 class="fw-semibold mb-2">Organized by</h6>
                        <a href="@Url.Action("View", "Profile", new { id = Model.OwnerId })" class="small">@Model.OwnerName</a>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-sm btn-outline-primary flex-fill" id="shareBtn"><i class="fas fa-share-alt me-1"></i>Share</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

