@{
    ViewBag.Title = "My Profile";
}
@model PersonalVenueOwnerVM

<div class="container-lg py-5">
    <!-- Profile Header -->
    <div class="row g-4 mb-5">
        <div class="col-lg-3 d-flex flex-column align-items-center justify-content-center">
            <div class="text-center">
                <div class="rounded-circle mb-3 d-flex align-items-center justify-content-center profile-photo-placeholder @(Model.Photo != null ? "has-photo" : "bg-light")"
                     style="@(Model.Photo != null ? $"background-image:url('{Model.Photo}'); background-size:cover; background-position:center; width: 150px; height: 150px; object-fit: cover;" : "width: 150px; height: 150px; object-fit: cover;")">
                    @if (Model.Photo == null)
                    {
                        <i class="fas fa-user fa-3x text-muted"></i>
                    }
                </div>
                <h3 class="fw-bold">@Model.Name</h3>
                <p class="fw-bold mb-2">
                    Verfication:
                    @if (Model.Verfication == AccountStatus.Verified.ToString())
                    {
                        <span class="text-success">Verified</span>
                    }
                    else if (Model.Verfication == AccountStatus.Declined.ToString())
                    {
                        <span class="text-danger">Declined</span>
                    }
                    else if (Model.Verfication == AccountStatus.Pending.ToString())
                    {
                        <span class="text-warning">Pending</span>
                    }
                    else if (Model.Verfication == AccountStatus.NotVerified.ToString())
                    {
                        <span>Not Verified</span>
                    }
                </p>
                <p class="text-muted mb-2">Venues Owner</p>
                <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Profile")">Edit Profile</a>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Profile Information</h5>
                    <div class="row g-4">
                        <div>
                            <small class="text-muted">Bio.</small>
                            <p class="fw-semibold">@Model.BIO</p>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <small class="text-muted">Gender</small>
                                <p class="fw-semibold">@Model.Gender</p>
                            </div>
                            <div>
                                <small class="text-muted">Email</small>
                                <p class="fw-semibold">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <small class="text-muted">Location</small>
                                <p class="fw-semibold">@Model.Country</p>
                            </div>
                            <div>
                                <small class="text-muted">Venues Number</small>
                                <p class="fw-semibold">@Model.VenueCount</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <small class="text-muted">Member Since</small>
                                <p class="fw-semibold">@Model.JoinedDate</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 d-flex">
            <div class="card border-0 shadow-sm w-100 earnings-card">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                    <h5 class="fw-bold mb-3">Earnings</h5>
                    <div class="earnings-amount-wrapper flex-grow-1">
                        <span class="fw-bold earnings-amount" data-max-size="96" data-min-size="18">@Model.WithdrawableEarnings$</span>
                    </div>
                    @* <button class="btn btn-primary btn-sm mt-3">Withdraw</button> *@
                    <a class="btn btn-primary btn-sm mt-3" href="@Url.Action("Withdraw", "Payment",new {ownerId = Model.Id})">Withdraw</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <h2 class="fw-bold col-lg-10">Venues</h2>
        <a href="@Url.Action("Add", "Venues")" class="btn btn-outline-primary btn-lg col-lg-2">Add Venue</a>
    </div>

    <div class="row g-4">
        @foreach (VenueCardVM venue in Model.Venues)
        {
            @await Html.PartialAsync("_PersonalVenueCard",venue)
        }
    </div>
</div>

@if (TempData["WithdrawSuccess"] != null)
{
    @await Html.PartialAsync("_SuccessWithdraw")
}
else if (TempData["WithdrawFailed"] != null)
{
    @await Html.PartialAsync("_FailedWithdraw")
}
