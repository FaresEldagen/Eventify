@{
    ViewBag.Title = "My Profile";
}
@model EventOrganizerVM

<div class="container-lg py-5">
    <!-- Profile Header -->
    <div class="row g-4 mb-5">
        <div class="col-lg-3 d-flex flex-column align-items-center justify-content-center">
            <div class="text-center">
                <div class="rounded-circle mb-3 d-flex align-items-center justify-content-center profile-photo-placeholder @(Model.Photo != null ? "has-photo" : "bg-light")"
                     style="@(Model.Photo != null ? $"background-image:url('{Model.Photo}'); background-size:cover; background-position:center; width: 150px; height: 150px; object-fit: cover;" : "width: 150px; height: 150px; object-fit: cover;")">
                    @if (Model.Photo == null)
                    {
                        <i class="fas fa-user fa-3x text-muted"></i>
                    }
                </div>
                <h3 class="fw-bold">@Model.Name</h3>
                <p class="fw-bold mb-2">Verfication: 
                    @if(Model.Verfication == AccountStatus.Verified.ToString())
                        {<span class="text-success">Verified</span>}
                    else if (Model.Verfication == AccountStatus.Declined.ToString())
                         {<span class="text-danger">Declined</span>}
                    else if (Model.Verfication == AccountStatus.Declined.ToString())
                         {<span class="text-warning">Pending</span>}
                </p>                
                <p class="text-muted mb-2">Event Organizer</p>
                <p class="text-muted">Specialized in <br>@Model.Specialization</p>
                <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Profile")">Edit Profile</a>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Profile Information</h5>
                    <div class="row g-4">
                        <div>
                            <small class="text-muted">Bio.</small>
                            <p class="fw-semibold">@Model.BIO</p>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <small class="text-muted">Gender</small>
                                <p class="fw-semibold">@Model.Gender</p>
                            </div>
                            <div>
                                <small class="text-muted">Email</small>
                                <p class="fw-semibold">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <small class="text-muted">Location</small>
                                <p class="fw-semibold">@Model.Country</p>
                            </div>
                            <div>
                                <small class="text-muted">Events Number</small>
                                <p class="fw-semibold">@Model.EventsCount</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <small class="text-muted">Member Since</small>
                                <p class="fw-semibold">@Model.JoinedDate</p>
                            </div>
                            <div>
                                <small class="text-muted">ExperienceYears</small>
                                <p class="fw-semibold">@Model.ExperienceYear</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <h2 class="fw-bold col-lg-10">Events</h2>
        <a href="@Url.Action("Index", "Venues")" class="btn btn-outline-primary btn-lg col-lg-2">Browse Venues</a>
    </div>

    <!-- My Events Tab -->
    <div class="row g-4">
        @foreach (EventCardVM event_ in Model.Events)
        {
            @await Html.PartialAsync("_PersonalEventCard", event_)
        }
    </div>
</div>
