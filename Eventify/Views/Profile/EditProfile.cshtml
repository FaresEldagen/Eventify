@model EditProfileVM

<div class="container-lg py-5">
    <form method="post" asp-controller="Profile" asp-action="Edit" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <!-- Profile Card -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <h5 class="fw-bold mb-4">Profile Picture</h5>

                <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center gap-4">

                    <div class="position-relative" id="profilePhotoPreview" style="width: 140px; height: 140px;">

                        <div class="rounded-circle d-flex align-items-center justify-content-center h-100 w-100 profile-photo-placeholder
             @(Model.Photo != null ? "has-photo" : "bg-light")"
                             style="@(Model.Photo != null ? $"background-image:url('{Model.Photo}'); background-size:cover; background-position:center;" : "")">

                            @if (Model.Photo == null)
                            {
                                <i class="fas fa-user fa-3x text-muted"></i>
                            }
                        </div>

                        <button type="button"
                                class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1
                       @(Model.Photo == null ? "d-none" : "")"
                                id="removeProfilePhoto"
                                style="border-radius: 50%; width: 30px; height: 30px; padding: 0;">
                            <i class="fas fa-times"></i>
                        </button>

                    </div>

                    <div>
                        <button type="button" class="btn btn-outline-primary btn-sm mb-2" id="changeProfilePhoto">
                            Change Photo
                        </button>
                        <p class="text-muted small mb-0">JPG or PNG no larger than 2MB</p>

                        <input asp-for="PhotoFile" type="file" class="d-none" id="profilePhotoInput" accept="image/*">

                        <input type="hidden" id="removePhotoFlag" name="RemovePhoto" value="false" />
                    </div>

                </div>

                <hr class="my-4">

                <div class="row g-4">
                    <div class="col-md-6 col-lg-4">
                        <label asp-for="Gender" class="form-label fw-semibold">Gender</label>
                        <select asp-for="Gender" class="form-select">
                            <option value="@null">Undefined</option>
                            <option value="@Convert.ToInt32(GenderEnum.Male)">@GenderEnum.Male.ToString()</option>
                            <option value="@Convert.ToInt32(GenderEnum.Female)">@GenderEnum.Female.ToString()</option>
                        </select>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <label asp-for="Country" class="form-label fw-semibold">Country</label>
                        <select asp-for="Country" class="form-select">
                            <option value="@null">Undefined</option>
                            @foreach (var city in Enum.GetValues<CountryEnum>())
                                { <option value="@Convert.ToInt32(city)">@city.ToString()</option> }
                        </select>
                    </div>
                    <div class="col-lg-4">
                        <label asp-for="Phone" class="form-label fw-semibold">Cell Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="10 digit number">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                        <small class="text-muted">Enter your number with your country key</small>
                    </div>
                    @if (User.IsInRole("Organizer"))
                    {
                        <div class="row g-4 mb-4">
                            <div class="col-md-6 col-lg-6">
                                <label asp-for="Specialization" class="form-label fw-semibold">Specialization</label>
                                <input asp-for="Specialization" class="form-control" placeholder="What are you Specialized at?">
                                <span asp-validation-for="Specialization" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <label asp-for="ExperienceYear" class="form-label fw-semibold">Experience Years</label>
                                <input asp-for="ExperienceYear" class="form-control" placeholder="How many years of Experience?">
                                <span asp-validation-for="ExperienceYear" class="text-danger"></span>
                            </div>
                        </div>
                    }
                    <div class="col-12">
                        <label asp-for="BIO" class="form-label fw-semibold">Bio</label>
                        <textarea asp-for="BIO" class="form-control" rows="4" placeholder="Tell us about yourself..."></textarea>
                        <span asp-validation-for="BIO" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Legal Info -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body p-4">
                <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
                    <div>
                        <h5 class="fw-bold mb-1">Legal Info</h5>
                        <p class="text-muted small mb-0">Please provide the following information for advanced verification</p>
                    </div>
                    <span class="badge bg-light text-dark"><i class="fas fa-lock me-2"></i>Secure &amp; Encrypted</span>
                </div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="NationalIDNumber" class="form-label fw-semibold">National ID Number*</label>
                        <input asp-for="NationalIDNumber" class="form-control" placeholder="National ID">
                        <span asp-validation-for="NationalIDNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ArabicFullName" class="form-label fw-semibold">Arabic Full Name (4 names)*</label>
                        <input asp-for="ArabicFullName" class="form-control" placeholder="الاسم الرباعي كما ببطاقة الهوية">
                        <span asp-validation-for="ArabicFullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ArabicAddress" class="form-label fw-semibold">Arabic Address*</label>
                        <input asp-for="ArabicAddress" class="form-control" placeholder="العنوان باللغة العربية">
                        <span asp-validation-for="ArabicAddress" class="text-danger"></span>
                    </div>


                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Front ID Photo</label>
                        <div class="position-relative" id="FrontIdPreviewWrapper" style="width: 100%; height: 180px;">
                            <!-- Placeholder Upload Box -->
                            <div class="upload-area border border-2 border-dashed rounded p-4 text-center
                                                h-100 d-flex flex-column justify-content-center align-items-center"
                                 id="FrontIdUploadArea"
                                 style="background-color: var(--card-bg); cursor: pointer;">
                                <i class="fas fa-cloud-upload-alt fs-1 text-muted mb-3"></i>
                                <p class="fw-semibold mb-1">Upload your Front ID</p>
                                <p class="text-muted small mb-0">Add front-side scan of your ID</p>
                            </div>

                            <!-- Preview Image -->
                            <img id="FrontIdImage"
                                 src="@Model.FrontIdPhoto"
                                 class="rounded w-100 h-100 d-none"
                                 style="object-fit: cover;">

                            <!-- Delete Button -->
                            <button type="button" id="removeFrontId"
                                    class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 d-none"
                                    style="border-radius: 50%; width: 30px; height: 30px; padding: 0;">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                        <input asp-for ="FrontIdFile" type="file" id="FrontIdInput" class="d-none" accept="image/*">
                        <input type="hidden" id="removeFrontIdFlag" name="RemoveFrontIdPhoto" value="false">
                    </div>


                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Back ID Photo</label>
                        <div class="position-relative" id="BackIdPreviewWrapper" style="width: 100%; height: 180px;">
                            <!-- Placeholder Upload Box -->
                            <div class="upload-area border border-2 border-dashed rounded p-4 text-center
                                                h-100 d-flex flex-column justify-content-center align-items-center"
                                 id="BackIdUploadArea"
                                 style="background-color: var(--card-bg); cursor: pointer;">
                                <i class="fas fa-cloud-upload-alt fs-1 text-muted mb-3"></i>
                                <p class="fw-semibold mb-1">Upload your Back ID</p>
                                <p class="text-muted small mb-0">Add back-side scan of your ID</p>
                            </div>

                            <!-- Preview Image -->
                            <img id="BackIdImage"
                                 src="@Model.BackIdPhoto"
                                 class="rounded w-100 h-100 d-none"
                                 style="object-fit: cover;">

                            <!-- Delete Button -->
                            <button type="button" id="removeBackId"
                                    class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 d-none"
                                    style="border-radius: 50%; width: 30px; height: 30px; padding: 0;">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                        <input asp-for="BackIdFile" type="file" id="BackIdInput" class="d-none" accept="image/*">
                        <input type="hidden" id="removeBackIdFlag" name="RemoveBackIdPhoto" value="false">
                    </div>

                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-primary px-5">Update</button>
                </div>
            </div>
        </div>
    </form>

    <!-- Danger Zone -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4 bg-light">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                <div>
                    <h5 class="fw-bold mb-1 text-danger">Danger Zone</h5>
                    <p class="text-muted mb-0 small">Delete your account and all related data. This process cannot be undone.</p>
                </div>
                <button class="btn btn-outline-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#deleteModal">
                    Delete Account
                </button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title text-danger">Delete Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete your account? This action cannot be undone.
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <a href="@Url.Action("Delete", "Profile")" class="btn btn-danger">
                    Yes, Delete
                </a>
            </div>

        </div>
    </div>
</div>

@if (TempData["DeleteProfileError"] != null)
{
    @await Html.PartialAsync("_CantDeleteAccount")
}
