@{
    ViewBag.Title = "My Profile";
}

<div class="container-lg py-5">
    <!-- Profile Header -->
    <div class="row g-4 mb-5">
        <div class="col-lg-3">
            <div class="text-center">
                <img src="~/images/avatar.jpg" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="Profile">
                <h3 class="fw-bold">John Doe</h3>
                <p class="text-muted">Attendee</p>
                <button class="btn btn-primary btn-sm">Edit Profile</button>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Profile Information</h5>
                    <div class="row g-4">
                        <div>
                            <small class="text-muted">Bio.</small>
                            <p class="fw-semibold">Event enthusiast always looking for new experiences. Excited to discover amazing events, book tickets with ease, and be part of unforgettable moments.</p>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <small class="text-muted">Gender</small>
                                <p class="fw-semibold">Male</p>
                            </div>
                            <div>
                                <small class="text-muted">Email</small>
                                <p class="fw-semibold">john@example.com</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <small class="text-muted">Location</small>
                                <p class="fw-semibold">New York, NY</p>
                            </div>
                            <div>
                                <small class="text-muted">Events Attended</small>
                                <p class="fw-semibold">2</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div>
                                <small class="text-muted">Member Since</small>
                                <p class="fw-semibold">January 2023</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="row g-4 mb-5">
        <div class ="col-lg-10">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="tickets-tab" data-bs-toggle="tab" data-bs-target="#tickets" type="button" role="tab">Upcoming Events Tickets</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="events-tab" data-bs-toggle="tab" data-bs-target="#events" type="button" role="tab">Attended Events</button>
                </li>
            </ul>
        </div>
        <a href="@Url.Action("Index", "Events")" class="btn btn-outline-primary btn-lg col-lg-2">Browse Events</a>
    </div>


    <!-- Tab Content -->
    <div class="tab-content">
        <!-- My Tickets Tab -->
        <div class="tab-pane fade show active" id="tickets" role="tabpanel">
            <div class="row g-4">
                <!-- Ticket Card 1 -->
                @await Html.PartialAsync("_TicketCard")

                <!-- Ticket Card 2 -->
                @await Html.PartialAsync("_TicketCard")
            </div>
        </div>

        <!-- My Events Tab -->
        <div class="tab-pane fade" id="events" role="tabpanel">
            <div class="row g-4">
                <!-- Event Card 1 -->
                @await Html.PartialAsync("_EventCard")
                <!-- Event Card 2 -->
                @await Html.PartialAsync("_EventCard")
            </div>
        </div>
    </div>
</div>
