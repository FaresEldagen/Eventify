@{
    ViewBag.Title = "Review Venue";
}
@model VenueEditVM

<div class="container-lg py-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3">List Your Venue</h1>
        <p class="lead text-muted">
            Join thousands of venue owners earning extra income by hosting events. It's
            free to list and easy to get started.
        </p>
    </div>

    <!-- Benefits Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="fas fa-star fs-5 text-primary"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Earn Extra Income</h5>
                    <p class="text-muted small">Turn your space into a profitable venue</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="fas fa-users fs-5 text-primary"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Reach More Customers</h5>
                    <p class="text-muted small">Connect with event planners and hosts</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                         style="width: 60px; height: 60px;">
                        <i class="fas fa-calendar fs-5 text-primary"></i>
                    </div>
                    <h5 class="fw-semibold mb-2">Easy Management</h5>
                    <p class="text-muted small">Simple booking and calendar management</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Form -->
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light border-0">
                    <h5 class="card-title fw-bold mb-0">Venue Details</h5>
                    <small class="text-muted">
                        Tell us about your venue so we can help you attract the right
                        events
                    </small>
                </div>
                <div class="card-body">
                    <!-- Basic Information -->
                    <h6 class="fw-bold mb-3">Basic Information</h6>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label">Venue Name *</label>
                            <input asp-for="Name" type="text" class="form-control" readonly placeholder="Empty">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VenueType" class="form-label">Venue Type *</label>
                            <input asp-for="VenueType" type="text" class="form-control" readonly placeholder="Empty">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label">Description *</label>
                        <textarea asp-for="Description" class="form-control" rows="4" readonly placeholder="Empty"></textarea>
                    </div>


                    <!-- Location -->
                    <h6 class="fw-bold mb-3"><i class="fas fa-map-marker-alt me-2"></i>Location</h6>

                    <div class="mb-4">
                        <label asp-for="Address" class="form-label">Street Address *</label>
                        <input asp-for="Address" type="text" class="form-control" readonly placeholder="Empty">
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Country" class="form-label">Country *</label>
                            <input asp-for="Country" type="text" class="form-control" readonly placeholder="Empty">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ZIP" class="form-label">ZIP Code *</label>
                            <input asp-for="ZIP" type="text" class="form-control" readonly placeholder="Empty">
                        </div>
                    </div>


                    <!-- Capacity & Pricing -->
                    <h6 class="fw-bold mb-3"><i class="fas fa-users me-2"></i>Capacity & Pricing</h6>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Capacity" class="form-label">Maximum Capacity *</label>
                            <input asp-for="Capacity" type="number" class="form-control" readonly placeholder="Empty">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PricePerHour" class="form-label">Price per Hour ($) *</label>
                            <input asp-for="PricePerHour" type="number" class="form-control" readonly placeholder="Empty">
                        </div>
                    </div>


                    <!-- Amenities -->
                    <h6 class="fw-bold mb-3">Amenities</h6>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <input asp-for="AirConditioningAvailable" class="form-check-input"
                                   type="checkbox" disabled />
                            <label asp-for="AirConditioningAvailable" class="form-label" for="Amenities">
                                Air
                                Conditioning
                            </label>
                        </div>
                        <div class="col-md-3">
                            <input asp-for="CateringAvailable" class="form-check-input" type="checkbox" disabled />
                            <label asp-for="CateringAvailable" class="form-label"
                                   for="Amenities">Catering</label>
                        </div>
                        <div class="col-md-3">
                            <input asp-for="WifiAvailable" class="form-check-input" type="checkbox" disabled />
                            <label asp-for="WifiAvailable" class="form-label" for="Amenities">Wi-Fi</label>
                        </div>
                        <div class="col-md-3">
                            <input asp-for="ParkingAvailable" class="form-check-input" type="checkbox" disabled />
                            <label asp-for="ParkingAvailable" class="form-label" for="Amenities">Parking</label>
                        </div>
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-3">
                            <input asp-for="BarServiceAvailable" class="form-check-input" type="checkbox" disabled />
                            <label asp-for="BarServiceAvailable" class="form-label" for="Amenities">
                                Bar
                                Service
                            </label>
                        </div>
                        <div class="col-md-3">
                            <input asp-for="AudioVisualEquipment" class="form-check-input" type="checkbox" disabled />
                            <label asp-for="AudioVisualEquipment" class="form-label" for="Amenities">
                                Audio
                                Visual Equipment
                            </label>
                        </div>
                        <div class="col-md-3">
                            <input asp-for="RestroomsAvailable" class="form-check-input" type="checkbox" disabled />
                            <label asp-for="RestroomsAvailable" class="form-label"
                                   for="Amenities">Restrooms</label>
                        </div>
                    </div>

                    <!-- Current Photos -->
                    <h6 class="fw-bold mb-3">Current Photos (At least one photo)</h6>
                    <div class="row g-3 mb-4">
                        @if (Model.venuePhotos != null && Model.venuePhotos.Count > 0)
                        {
                            foreach (var photo in Model.venuePhotos)
                            {
                                <div class="col-md-3 col-sm-4 col-6"
                                        data-file-name="@photo.PhotoUrl.Split('/').Last()">
                                    <div class="position-relative">
                                        <a href="@photo.PhotoUrl" target="_blank">
                                            <img src="@photo.PhotoUrl" class="img-thumbnail w-100"
                                                 style="height:150px; object-fit:cover;" />
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>


                    <!-- Proof of ownership -->
                    <h6 class="fw-bold mb-3">Proof of ownership *</h6>
                    <div class="col-md-4 mb-3">
                        <div class="position-relative" id="FrontIdPreviewWrapper"
                             style="width: 100%; height: 480px;">
                            @if (Model.ProofOfOwnership == null)
                            {
                                <!-- Placeholder Upload Box -->
                                <div class="upload-area border border-2 border-dashed rounded p-4 text-center
                                            h-100 d-flex flex-column justify-content-center align-items-center"
                                     id="FrontIdUploadArea" style="background-color: var(--card-bg);">
                                    <i class="fas fa-close fs-1 text-muted mb-3"></i>
                                    <p class="fw-semibold mb-1">Empty</p>
                                </div>
                            }
                            else
                            {
                                <!-- Preview Image -->
                                <a href="@Model.ProofOfOwnership" target="_blank">
                                    <img id="FrontIdImage" src="@Model.ProofOfOwnership"
                                         class="rounded w-100 h-100 d-none" style="object-fit: cover;">
                                </a>
                            }
                        </div>
                    </div>

                    <!-- Special Features -->
                    <h6 class="fw-bold mb-3">Special Features (Optional)</h6>
                    <div class="mb-4">
                        <textarea asp-for="SpecialFeatures" class="form-control" rows="4" readonly placeholder="Empty"></textarea>
                    </div>
                </div>

                <!-- Danger Zone -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4 bg-light">
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                            <div>
                                <h5 class="fw-bold mb-1 text-warning">Verifing Zone</h5>
                                <p class="text-muted mb-0 small">According to the user information, Choose to verify or decline verifying the user.</p>
                            </div>
                            <div class="text-end">
                                <a class="btn btn-primary px-5" href="@Url.Action("VerifyVenue", "Admin", new { id = Model.Id })">Verify</a>
                                <a class="btn btn-danger px-5" href="@Url.Action("DeclineVenue", "Admin", new { id = Model.Id })">Decline</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>