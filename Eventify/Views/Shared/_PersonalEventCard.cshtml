@model EventCardVM

<div class="col-md-6 col-lg-4">
    <div class="card border-0 shadow-sm">
        <div class="position-relative">
            <img src="@Model.EventPhoto" class="card-img-top img-hover" alt="@Model.EventTitle">
            <div class="badge bg-white text-primary position-absolute top-0 start-0 m-3">@Model.Status</div>
            @* <div class="position-absolute top-0 end-0 m-3 bg-white rounded-circle p-2 small"> *@
            @*     <i class="fas fa-star-fill text-warning"></i> 4.9 *@
            @* </div> *@
        </div>
        <div class="card-body">
            <h5 class="card-title fw-bold">@Model.EventTitle</h5>
            <p class="card-text text-muted small"><i class="fas fa-calendar me-1"></i>@Model.StartDateTime</p>
            <p class="card-text text-muted small"><i class="fas fa-map-marker-alt me-1"></i>@Model.Address</p>
            <div class="d-flex justify-content-between align-items-center">
                <span class="fw-bold text-primary">From $@Model.TicketPrice</span>
                <div class="btn-group btn-group-sm" role="group">
                    <a class="btn btn-outline-primary" title="View" href="@Url.Action("Details", "Events", new { id = Model.Id })"><i class="fas fa-eye"></i></a>
                    <a class="btn btn-outline-primary" title="Edit" href="@Url.Action("Edit", "Events", new { id = Model.Id })"><i class="fas fa-edit"></i></a>
                    <button class="btn btn-outline-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal{@Model.Id}">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteModal{@Model.Id}" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title text-danger">Delete Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete this Event? This action cannot be undone.
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <a href="@Url.Action("Delete", "Events", new { id = Model.Id })" class="btn btn-danger">
                    Yes, Delete
                </a>
            </div>

        </div>
    </div>
</div>