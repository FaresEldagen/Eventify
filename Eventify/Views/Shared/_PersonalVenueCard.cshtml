@model VenueCardVM

<div class="col-md-6 col-lg-4">
    <div class="card border-0 shadow-sm">
        <div class="position-relative">
            <img src="@Model.Photo" class="card-img-top img-hover" alt="@Model.VenueName">
            <span class="badge bg-white text-primary position-absolute top-0 start-0 m-3">@Model.Type</span>
            @* <div class="position-absolute top-0 end-0 m-3 bg-white rounded-circle p-2 small"> *@
            @*     <i class="fas fa-star-fill text-warning"></i> 4.9 *@
            @* </div> *@
        </div>
        <div class="card-body">
            <h5 class="card-title fw-bold">@Model.VenueName</h5>
            <p class="card-text text-muted small"><i class="fas fa-map-marker-alt me-1"></i>@Model.Address</p>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h6 class="fw-bold text-primary mb-0">$@Model.PricePerHour/hour</h6>
                <small class="text-muted">Up to @Model.Capacity guests</small>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group btn-group-sm" role="group">
                    <a class="btn btn-outline-primary" title="View" href="@Url.Action("Details", "Venues", new { id = Model.Id })"><i class="fas fa-eye"></i></a>
                    <a class="btn btn-outline-primary" title="Edit" href="@Url.Action("Edit", "Venues", new { id = Model.Id })"><i class="fas fa-edit"></i></a>
                    <button class="btn btn-outline-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal{@Model.Id}">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal{@Model.Id}" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title text-danger">Delete Venue</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete this Venue? This action cannot be undone.
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <a href="@Url.Action("Delete", "Venues", new { id = Model.Id })" class="btn btn-danger">
                    Yes, Delete
                </a>
            </div>

        </div>
    </div>
</div>
