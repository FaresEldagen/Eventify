@model VenueCardVM

<div class="col-md-6 col-lg-4">
    <div class="card h-100 border-0 shadow-sm">
        <div class="position-relative">
            <img src="@Model.Photo" class="card-img-top img-hover" alt="@Model.VenueName">
            <span class="badge bg-white text-primary position-absolute top-0 start-0 m-3">@Model.VenueType</span>
            @* <div class="position-absolute top-0 end-0 m-3 bg-white rounded-circle p-2 small"> *@
            @*     <i class="fas fa-star-fill text-warning"></i> 4.9 *@
            @* </div> *@
        </div>
        <div class="card-body">
            <h5 class="card-title fw-bold">@Model.VenueName</h5>
            <p class="card-text text-muted small"><i class="fas fa-map-marker-alt me-1"></i>@Model.Address</p>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h6 class="fw-bold text-primary mb-0">$@Model.PricePerHour/hour</h6>
                <small class="text-muted">Up to @Model.Capacity guests</small>
            </div>
            @* <div class="flex-wrap gap-1 mb-3 d-flex"> *@
            @*     <span class="badge border border-primary text-primary bg-white" style="font-size: 0.75rem;">Parking</span> *@
            @*     <span class="badge border border-primary text-primary bg-white" style="font-size: 0.75rem;">Catering</span> *@
            @*     <span class="badge border border-primary text-primary bg-white" style="font-size: 0.75rem;">+2 more</span> *@
            @* </div> *@
            <a href="@Url.Action("Details", "Venues", new { id = Model.Id })" class="btn btn-primary w-100">View Details</a>
        </div>
    </div>
</div>