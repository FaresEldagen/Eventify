<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Account Deletion Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete your account? This action cannot be undone.
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    إلغاء
                </button>

                <form method="post" action="/Account/Delete">
                    <button type="submit" class="btn btn-danger">
                        حذف
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

<style>
    /* الـ Overlay */
    .cancel-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        backdrop-filter: blur(6px);
        background: rgba(0, 0, 0, 0.35);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999999;
        animation: fadeInCancel 0.4s ease-out;
    }

    .cancel-popup {
        background: #fff;
        padding: 40px 50px;
        border-radius: 18px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        animation: popCancel 0.35s ease-out;
    }

    @@keyframes popCancel {
        0% {
            transform: scale(0.5);
            opacity: 0;
        }


        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    @@keyframes fadeInCancel {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>

<script>
    // Redirect after 3 seconds
    setTimeout(function () {
        window.location.href = "/Profile"; // غير إلى الصفحة اللي تريدها
    }, 3500);
</script>
