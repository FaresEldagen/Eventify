@model EventBrowseViewModel
@if (Model.EventCards.Count != 0)
{
    @foreach (var card in Model.EventCards)
    {
        @await Html.PartialAsync("_EventCard", card);
    }

    if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <input type="hidden" name="pageNumber" value="@Model.PageNumber" id="pageNumberInput" />

            <nav aria-label="Page navigation">
                <ul class="pagination">

                    <!-- Previous -->
                    <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                        <button type="button"
                                class="page-link js-change-page"
                                data-page="@(Model.PageNumber - 1)"
                                @(Model.PageNumber <= 1 ? "disabled" : "")>
                            Previous
                        </button>
                    </li>

                    <li class="page-item active">
                        <a class="page-link" href="#" aria-current="page">@Model.PageNumber</a>
                    </li>

                    <!-- Next -->
                    <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                        <button type="button"
                                class="page-link js-change-page"
                                data-page="@(Model.PageNumber + 1)"
                                @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")>
                            Next
                        </button>
                    </li>

                </ul>
            </nav>
        </div>


        <script>
            function changePage(page) {
                document.getElementById("pageNumberInput").value = page;
            }
        </script>
    }
}
else
{
    <div class="card text-center mt-4 shadow-sm border-0">
        <div class="card-body py-5">
            <div class="mb-3">
                <i class="fas fa-search-minus fa-3x text-muted"></i>
            </div>
            <h4 class="fw-bold mb-2">No Results Found</h4>
            <p class="text-muted mb-0">
                We couldn’t find any venues that match your filters.
                Try adjusting your search to see more available options.
            </p>
        </div>
    </div>
}

