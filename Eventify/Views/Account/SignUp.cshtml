@{
    Layout = "_SignLayout";
    ViewBag.Title = "Sign Up";
}

@model SignupViewModel

<div class="signup-page">
    <div class="signup-container">
        <!-- Left Section - Signup Form -->
        <div class="signup-left">
            <a class="navbar-brand fw-bold fs-4 mb-4" href="@Url.Action("Index", "Home")">
                <i class="fas fa-calendar fs-4 text-primary"></i>
                Eventify
            </a>

            <h1 class="signup-title">Signup to Your Account</h1>

            <form id="signupForm" method="post">
                <div class="signup-form-group">
                    <label asp-for="Email" class="signup-form-label">Email</label>
                    <input asp-for="Email" type="text" class="signup-form-control" id="signupEmail" placeholder="Email" >
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="signup-form-group">
                    <label asp-for="Username" class="signup-form-label">Username</label>
                    <input asp-for="Username" type="text" class="signup-form-control" id="signupUsername" placeholder="Username" >
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="signup-form-group">
                    <label asp-for="Password" class="signup-form-label">Password</label>
                    <div class="signup-password-wrapper">
                        <input asp-for="Password" type="password" class="signup-form-control" id="signupPassword" placeholder="Password" >
                        <button type="button" class="signup-password-toggle" id="signupPasswordToggle">
                            <i class="fas fa-eye-slash" id="signupPasswordIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="signup-form-group">
                    <label asp-for="ConfirmPassword" class="signup-form-label">Confirm Password</label>
                    <div class="signup-password-wrapper">
                        <input asp-for="ConfirmPassword" type="password" class="signup-form-control" id="signupConfirmPassword" placeholder="Confirm Password" >
                        <button type="button" class="signup-password-toggle" id="signupConfirmPasswordToggle">
                            <i class="fas fa-eye-slash" id="signupConfirmPasswordIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span> 
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">Sign Up</button>
            </form>
        </div>

        <!-- Right Section - Sign In Prompt -->
        <div class="signup-right">
            <button class="signup-theme-toggle" id="themeToggle" title="Toggle theme">
                <svg id="sunIcon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="d-none">
                    <circle cx="12" cy="12" r="5"></circle>
                    <line x1="12" y1="1" x2="12" y2="3"></line>
                    <line x1="12" y1="21" x2="12" y2="23"></line>
                    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                    <line x1="1" y1="12" x2="3" y2="12"></line>
                    <line x1="21" y1="12" x2="23" y2="12"></line>
                    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
                </svg>
                <svg id="moonIcon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                </svg>
            </button>

            <h2 class="signup-signin-title">Already a Member?</h2>
            <p class="signup-signin-text">
                Welcome back! Sign in and continue exploring events with ease
            </p>
            <button class="btn btn-outline-primary" style="width: 100%;" onclick="window.location.href='@Url.Action("Login", "Account")'">Sign In</button>
        </div>
    </div>
</div>



